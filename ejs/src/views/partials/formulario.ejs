<div class="form-group col-4 mx-auto my-3 w-25 border p-3">
    <form action="/index" method="POST">
        <fieldset>
            <h4 class="d-block mx-auto my-2 text-center">New Product</h4>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Title Product" required>
            <br>
            <label for="price">Price</label>
            <input type="text" name="price" id="price" class="form-control" placeholder="Ex. $150" required>
            <br>
            <label for="thumbnail">Picture URL</label>
            <input type="text" name="thumbnail" id="thumbnail" class="form-control" placeholder="url" required>
            <br>
            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-primary mx-auto" value="Save Product">
                <button type="reset" class="btn btn-danger mx-auto">Reset</button>
            </div>
        </fieldset>
    </form>
</div>                
                
            